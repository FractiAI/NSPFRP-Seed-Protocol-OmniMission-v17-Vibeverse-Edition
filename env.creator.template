# ============================================
# GITHUB CONFIGURATION
# ============================================
GITHUB_TOKEN=
GITHUB_OWNER=FractiAI
CREATOR_GITHUB_USER=creator

# ============================================
# VERCEL CONFIGURATION
# ============================================
VERCEL_TOKEN=
VERCEL_TEAM_ID=
VERCEL_PROJECT_ID=

# ============================================
# AI MODEL CONFIGURATION (Claude Sonnet 4.5+)
# ============================================
AI_MODEL=claude-sonnet-4.5
AI_PROVIDER=anthropic
ANTHROPIC_API_KEY=
AI_ENABLED=true
AI_VALIDATE_PROTOCOLS=true
AI_RESOLVE_CONFLICTS=true
AI_ANALYZE_CODE=true

# ============================================
# QUEEN BEE CATALOG SYNC
# ============================================
CATALOG_SYNC_ENABLED=true
CATALOG_SYNC_INTERVAL=3600000
CATALOG_DISCOVERY_MIN_CONFIDENCE=0.5
AI_ENHANCED_DISCOVERY=true

# ============================================
# SUBORDINATE NODES
# ============================================
NODE_1_ID=node-instrumentation-shell-api
NODE_1_NAME=Instrumentation Shell API
NODE_1_REPO=FractiAI/Instrumentation-Shell-API
NODE_1_TYPE=api
NODE_1_OCTAVE=2
NODE_1_VERSION=1.0.0
NODE_1_STATUS=active

NODE_2_ID=node-syntheverse-onramp
NODE_2_NAME=Syntheverse 7 Octave 2-3 Public Cloud Onramp
NODE_2_REPO=FractiAI/Syntheverse-7-Octave-2-3-Public-Cloud-Onramp
NODE_2_TYPE=onramp
NODE_2_OCTAVE=2
NODE_2_VERSION=2.51
NODE_2_STATUS=active

# ============================================
# CREATOR OPERATIONS
# ============================================
CREATOR_ROLE=creator
CREATOR_EMAIL=info@fractiai.com
AUTO_PROTOCOL_UPDATE=true
AUTO_VERSION_BUMP=true
AI_DECISION_MAKING=true

# ============================================
# LOGGING & MONITORING
# ============================================
DEBUG_MODE=false
LOG_LEVEL=info
NOTIFY_SYNC_RESULTS=true
LOG_AI_INTERACTIONS=true

# ============================================
# SECURITY
# ============================================
VERIFY_SIGNATURES=true
VERIFY_CONTENT_INTEGRITY=true
VERIFY_AI_RESPONSES=true

# ============================================
# ADVANCED CONFIGURATION
# ============================================
EXPERIMENTAL_FEATURES=true
VALIDATE_BEFORE_SYNC=true
MAX_SYNC_BATCH_SIZE=50
RETRY_FAILED_SYNCS=true
MAX_RETRY_ATTEMPTS=3
AI_CONTEXT_WINDOW=200000
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4096
